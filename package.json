{
  "name": "hyperwallet",
  "private": true,
  "version": "0.0.0",
  "main": "dist-electron/main.cjs",
  "type": "module",
  "scripts": {
    "dev": "npm run dev:electron",
    "dev:web": "vite",
    "dev:electron": "tsc -p tsconfig.electron.json && mv dist-electron/main.js dist-electron/main.cjs && mv dist-electron/preload.js dist-electron/preload.cjs && concurrently -k \"vite\" \"npm run electron:dev\"",
    "electron": "wait-on tcp:5173 && electron .",
    "electron:dev": "wait-on tcp:5173 && cross-env NODE_ENV=development electron .",
    "build": "tsc -p tsconfig.electron.json && mv dist-electron/main.js dist-electron/main.cjs && mv dist-electron/preload.js dist-electron/preload.cjs && vite build && electron-builder",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "build": {
    "appId": "com.hyperwallet.app",
    "productName": "HyperWallet",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.finance"
    },
    "win": {
      "target": "nsis"
    }
  },
  "dependencies": {
    "@solana/web3.js": "^1.98.4",
    "@tailwindcss/postcss": "^4.1.17",
    "axios": "^1.13.2",
    "bip32": "^5.0.0",
    "bip39": "^3.1.0",
    "bitcoinjs-lib": "^7.0.0",
    "buffer": "^6.0.3",
    "clsx": "^2.1.1",
    "ed25519-hd-key": "^1.3.0",
    "electron-squirrel-startup": "^1.0.1",
    "ethers": "^6.15.0",
    "events": "^3.3.0",
    "framer-motion": "^12.23.24",
    "lucide-react": "^0.554.0",
    "monero-ts": "^0.11.6",
    "postcss": "^8.5.6",
    "qrcode.react": "^4.2.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.9.6",
    "recharts": "^3.4.1",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.17",
    "tiny-secp256k1": "^2.2.4",
    "vite-plugin-top-level-await": "^1.6.0",
    "vite-plugin-wasm": "^3.5.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "assert": "^2.1.0",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.2.3",
    "electron-builder": "^26.0.12",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "jsdom": "^22.1.0",
    "stream-browserify": "^3.0.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "util": "^0.12.5",
    "vite": "^7.2.4",
    "vitest": "^4.0.12",
    "wait-on": "^9.0.3"
  }
}
